{
  "compilerOptions": {
    "allowJs": false,
    "baseUrl": "lib",
    "declaration": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "lib": ["esnext"],
    "module": "commonjs",
    "noImplicitOverride": true,
    "outDir": "./build",
    "resolveJsonModule": true,
    "strict": true,
    "target": "es2019"
  },
  "include": ["./**/*.ts"],
  "exclude": ["./node_modules", "./build"],
  "rules": {
    "orderedImports": [true]
  }
}
